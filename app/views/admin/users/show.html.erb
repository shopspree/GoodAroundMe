<p id="notice"><%= notice %></p>

<p>
  <b>ID:</b>
  <%= @user.id %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Admin:</b>
  <%= check_box_tag 'Admin', @user.id, @user.admin?, disabled: true %>
</p>

<p>
  <b>Approved:</b>
  <%= check_box_tag 'Approved', @user.id, @user.approved?, disabled: true %>
</p>

<% if @user.person %>

    <p>
      <b>First Name:</b>
      <%= @user.person.profile.first_name %>
    </p>

    <p>
      <b>Last Name:</b>
      <%= @user.person.profile.last_name %>
    </p>

<% end %>



<%= link_to 'Back', admin_users_path %>
